
<div class = "container col-md-offset-4 col-md-4 col-md-offset-4">
<h1><%= @listing.name %></h1><br>

<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner">
        <% @listing.images.each_with_index do |i, ind| %>
          <% if ind == 0 %>
            <div class="item active">
              <%= image_tag i.image.url, style:"width: 100%" %>
              <div class="carousel-caption">
                <!-- <h4>Bob</h4> -->
              </div>
            </div>
          <% else %>
            <div class="item">
              <%= image_tag i.image.url, style:"width: 100%" %>
              <div class="carousel-caption">
                <!-- <h4>Alice</h4> -->
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
      <!-- Left and right controls -->
      <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>

<br>
<p>
  <strong>Type:</strong>
  <%= @listing.house_type %>
</p>

<p>
  <strong>Number Of Rooms:</strong>
  <%= @listing.num_of_rooms %>
</p>

<p>
  <strong>Address</strong>
  <%= @listing.address %>
</p>

<p>
  <strong>City:</strong>
  <%= @listing.city %>
</p>

<p>
  <strong>State:</strong>
  <%= @listing.state %>
</p>

<p>
  <strong>Starting Price:</strong>
  <%= @listing.price %>
</p>

<p>
  <strong>Expiration:</strong>
  <%= @listing.expiration %>
</p>

<br>
<%= render 'listings/container' %>

<h3>Bids:</h3>
<br>
  <table id = "bid_table">
    <tr>
      <th>User Name</th>
      <th>Bidding Price</th>
      <th>Highest Bid</th>
      <th></th>
    </tr>
    <% @listing.bids.order("bidding_price DESC").each do |bid| %>
    <tr>
    <% if bid.id != nil %>
    <td><%= bid.user.username %></td>
    <td><%= bid.bidding_price %></td>
    <td><%= bid.chosen_bid %></td>
    <% if current_user.role == "admin" %>
    <td><%= link_to "Delete Bid", bid, method: :delete %></td>
    <% end %>
    </tr>
  <% end %>
  <% end %>
  </table>
</div>
