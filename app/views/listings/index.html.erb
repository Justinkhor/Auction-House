
<div class = "container col-md-offset-1 col-md-10 col-md-offset-1">
<h1>Listings</h1>

<table>
  <thead>
    <tr>
      <th>Listing Name</th>
      <th>Type</th>
      <th>Number Of Rooms</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Starting Price</th>
      <th>Expiration</th>
      <th>Expired?</th>
      <th>Sold?</th>
      <th>Paid?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.name %></td>
        <td><%= listing.house_type %></td>
        <td><%= listing.num_of_rooms %></td>
        <td><%= listing.address %></td>
        <td><%= listing.city %></td>
        <td><%= listing.state %></td>
        <td><%= listing.price %></td>
        <td><%= listing.expiration %></td>
        <td><%= listing.expired %></td>
        <td><%= listing.sold %></td>
        <td><%= listing.paid %></td>
        <td><%= link_to 'Show', listing %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
