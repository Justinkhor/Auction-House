<div class = "container col-md-offset-4 col-md-4 col-md-offset-4">
<h1>Signup!</h1><br>

<%= form_for :user, url: '/users' do |f| %>

  First Name: <%= f.text_field :first_name %><br><br>
  Last Name: <%= f.text_field :last_name %><br><br>
  Username: <%= f.text_field :username %><br><br>
  Email: <%= f.email_field :email %><br><br>
  Password: <%= f.password_field :password %><br><br>

  <%= f.submit "Continue" %><br><br>

  or <%= link_to "Sign in with Facebook", "/auth/facebook" %>
<% end %>
</div>
